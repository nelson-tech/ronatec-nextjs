{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@hooks/*": ["lib/hooks/*"],
      "@server/*": ["lib/server/*"],
      "@store": ["lib/store"],
      "@store/*": ["lib/store/*"],
      "@lib/types": ["lib/types"],
      "@lib/types/*": ["lib/types/*"],
      "@utils/*": ["lib/utils/*"],
      "@mocks/*": ["__mocks__/*"],
      "payload/generated-types": ["./payload/payload-types.ts"],
      "payload-config": ["./payload/payload.config.ts"],
      "~payload/*": ["./payload/*"]
    },
    "strictNullChecks": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
