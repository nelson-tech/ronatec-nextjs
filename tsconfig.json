{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": true,
    "paths": {
      "@mocks/*": ["__mocks__/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@hooks/*": ["src/lib/hooks/*"],
      "@server/*": ["src/lib/server/*"],
      "@store": ["src/lib/store"],
      "@store/*": ["src/lib/store/*"],
      "@lib/types": ["src/lib/types"],
      "@lib/types/*": ["src/lib/types/*"],
      "@utils/*": ["src/lib/utils/*"],
      "~payload-types": ["src/payload/payload-types.ts"],
      "~payload/*": ["src/payload/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  }
}
