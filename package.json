{
  "name": "ronatec",
  "version": "0.2.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "analyze": "cross-env ANALYZE=true next build",
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload/config.ts nodemon",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload/config.ts payload build",
    "build:server": "tsc --project tsconfig.server.json && tsc-alias -p tsconfig.server.json",
    "build:next": "cross-env PAYLOAD_CONFIG_PATH=dist/payload/config.js NEXT_BUILD=true node dist/server.js",
    "build": "cross-env NODE_ENV=production yarn build:payload && yarn build:server && yarn copyfiles && yarn build:next",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "start": "cross-env PAYLOAD_CONFIG_PATH=dist/payload/config.js NODE_ENV=production node dist/server.js",
    "lint": "next lint",
    "pm2-dev-start": "pm2 start npm --name \"Ronatec Next.js Dev\" -- run dev",
    "pm2-dev-stop": "pm2 stop \"Ronatec Next.js Dev\" && pm2 delete \"Ronatec Next.js Dev\"",
    "pm2-dev-restart": "pm2 restart \"Ronatec Next.js Dev\"",
    "pm2-stage-start": "PORT=8240 pm2 start npm --name \"Ronatec Next.js Staging\" -- run start",
    "pm2-stage-stop": "pm2 stop \"Ronatec Next.js Staging\" && pm2 delete \"Ronatec Next.js Staging\"",
    "pm2-stage-restart": "pm2 restart \"Ronatec Next.js Staging\"",
    "pm2-prod-start": "PORT=8340 pm2 start npm --name \"Ronatec Next.js Production\" -- run start",
    "pm2-prod-stop": "pm2 stop \"Ronatec Next.js Production\" && pm2 delete \"Ronatec Next.js Production\"",
    "pm2-prod-restart": "pm2 restart \"Ronatec Next.js Production\"",
    "git-update": "git pull && yarn install && yarn build",
    "dev-update": "git checkout dev && yarn git-update && yarn pm2-dev-stop; yarn pm2-dev-start",
    "staging-update": "git checkout staging && yarn git-update && yarn pm2-stage-stop; yarn pm2-stage-start",
    "production-update": "git checkout main && yarn git-update && yarn pm2-prod-stop; yarn pm2-prod-start",
    "build:css": "postcss assets/main.css -o assets/main_browser.css",
    "generate:types": "PAYLOAD_CONFIG_PATH=./src/payload/config.ts payload generate:types",
    "test": "jest --watch --coverage \".*\\.test\\.ts*\"",
    "tests": "jest --coverage \".*\\.test\\.ts*\"",
    "test:e2e": "playwright test",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.405.0",
    "@aws-sdk/lib-storage": "^3.405.0",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@hookform/error-message": "^2.0.1",
    "@hookform/resolvers": "^3.3.1",
    "@payloadcms/plugin-cloud-storage": "^1.0.19",
    "@payloadcms/plugin-nested-docs": "^1.0.6",
    "@websolutespa/payload-plugin-localization": "^0.0.5",
    "dotenv": "^16.3.1",
    "html-react-parser": "^4.2.2",
    "jwt-decode": "^3.1.2",
    "lodash.debounce": "^4.0.8",
    "next": "^13.4.19",
    "next-seo": "^6.1.0",
    "nodemailer": "^6.9.4",
    "payload": "1.15.2",
    "qs": "^6.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.46.0",
    "react-player": "^2.12.0",
    "react-simple-maps": "^3.0.0",
    "react-slick": "^0.29.0",
    "sass": "^1.66.1",
    "slick-carousel": "^1.8.1",
    "zod": "^3.22.2",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^13.4.19",
    "@playwright/test": "^1.37.1",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.4",
    "@types/lodash.debounce": "^4.0.7",
    "@types/node": "^20.5.9",
    "@types/nodemailer": "^6.4.9",
    "@types/nodemailer-smtp-transport": "^2.7.5",
    "@types/prop-types": "^15.7.5",
    "@types/qs": "^6.9.8",
    "@types/react": "^18.2.21",
    "@types/react-simple-maps": "^3.0.0",
    "@types/react-slick": "^0.23.10",
    "autoprefixer": "^10.4.15",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.48.0",
    "eslint-config-next": "^13.4.19",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.29",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "prop-types": "^15.8.1",
    "tailwindcss": "^3.3.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,css,md}": "prettier --write"
  }
}